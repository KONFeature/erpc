{
  "include": ["src/*", "example/*"],
  "compilerOptions": {
    "outDir": "lib",
    "lib": ["es2022"],
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES6"
  }
}
